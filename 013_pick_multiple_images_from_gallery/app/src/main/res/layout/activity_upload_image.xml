<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImageActivity">

    <Button
        android:id="@+id/activity_upload_image_single_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD SINGLE IMAGE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_upload_image_multiple_images"/>

    <Button
        android:id="@+id/activity_upload_image_multiple_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD MULTIPLE IMAGES"
        app:layout_constraintTop_toBottomOf="@+id/activity_upload_image_single_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>