<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/activity_main_btn_open_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN SCROLL VIEW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_btn_open_recycler_view"/>

    <Button
        android:id="@+id/activity_main_btn_open_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN RECYCLER VIEW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_btn_open_scroll_view"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_btn_open_grid_view"/>

    <Button
        android:id="@+id/activity_main_btn_open_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN GRID VIEW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_btn_open_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>