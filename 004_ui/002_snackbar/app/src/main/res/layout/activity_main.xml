<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/activity_main_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_swipeable"/>

    <Button
        android:id="@+id/activity_main_swipeable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipeable"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_with_fab"/>

    <Button
        android:id="@+id/activity_main_with_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With FAB"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_swipeable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_with_bottom_navigation"/>

    <Button
        android:id="@+id/activity_main_with_bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITH Bottom Navigation"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_with_fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>