<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ScrollViewActivity">

    <Button
        android:id="@+id/activity_scroll_view_btn_open_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCROLL VIEW"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_scroll_view_btn_open_scroll_view_with_recycler_view"/>

    <Button
        android:id="@+id/activity_scroll_view_btn_open_scroll_view_with_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECYCLER VIEW IN SCROLL VIEW"
        app:layout_constraintTop_toBottomOf="@+id/activity_scroll_view_btn_open_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_scroll_view_btn_open_nested_scroll_view"/>

    <Button
        android:id="@+id/activity_scroll_view_btn_open_nested_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NESTED SCROLL VIEW"
        app:layout_constraintTop_toBottomOf="@+id/activity_scroll_view_btn_open_scroll_view_with_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>