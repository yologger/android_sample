<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFFBBE"
    tools:context=".transition.fragment.ThirdFragment">

    <Button
        android:id="@+id/fragment_third_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragment_third_tv_title"/>

    <TextView
        android:id="@+id/fragment_third_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Third Fragment"
        app:layout_constraintBottom_toTopOf="@+id/fragment_third_btn_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_third_btn_back" />

    <Button
        android:id="@+id/fragment_third_btn_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_third_tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>